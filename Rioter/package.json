{
  "name": "eger",
  "version": "1.0.0",
  "description": "MSP service",
  "scripts": {
    "start": "npm run watch & npm run server",
    "build": "npm run lint && npm run test && rollup -c",
    "watch": "chokidar './src/*, index.html' -c 'npm run build'",
    "server": "browser-sync start --files './src/*, index.html' --server",
    "lint": "eslint -c google -c eslint.config.js --fix *.js src/",
    "test": "mocha --compilers js:babel-core/register --recursive test/",
    "dev": "chokidar 'src/**' 'index.html' -c 'rollup -c'"
  },
  "author": "brainpad.inc",
  "license": "ISC",
  "dependencies": {
    "riot": "^3.3.2",
    "riot-route": "^3.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.20.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2015-riot": "^1.1.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-preset-react": "^6.22.0",
    "babel-register": "^6.18.0",
    "browser-sync": "^2.18.2",
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.12.0",
    "eslint-config-google": "^0.7.1",
    "eslint-plugin-riot": "^0.1.6",
    "fs-extra": "^1.0.0",
    "log": "^1.4.0",
    "mocha": "^3.2.0",
    "postcss": "^5.2.6",
    "postcss-cssnext": "^2.9.0",
    "power-assert": "^1.4.2",
    "rewire": "^2.5.2",
    "rollup": "^0.36.4",
    "rollup-plugin-buble": "^0.14.0",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-css-only": "^0.1.0",
    "rollup-plugin-eslint": "^3.0.0",
    "rollup-plugin-inject": "^2.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-riot": "^1.1.0",
    "sinon": "^1.17.7"
  }
}
